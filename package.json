{
  "name": "fusion-ui",
  "version": "1.0.0-alpha",
  "description": "Fusion UI, a library of web components",
  "license": "MIT",
  "author": "Vinay Uttam Vemparala",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/fusion-ui/fusion-ui.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vinayuttam/fusion-ui.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "devDependencies": {
    "@stencil/core": "^4.7.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^16.18.11",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^21.9.0"
  },
  "exports": {
    ".": {
      "import": "./dist/fusion-ui/fusion-ui.esm.js",
      "require": "./dist/fusion-ui/fusion-ui.cjs.js"
    },
    "./fui-text": {
      "import": "./dist/components/fui-text.js",
      "types": "./dist/components/fui-text.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },
  "dependencies": {
    "date-fns": "^3.6.0"
  }
}
